#!/bin/bash
echo "============================================================================="
curl -s https://raw.githubusercontent.com/AlekseyMoskalev1/script/main/Noders.sh | bash
echo "============================================================================="
PS3='Выберите действие: '
options=("Установить Docker" "Обновить пакетный менеджер apt" "Установить Masa" "Выход")
select opt in "${options[@]}"
do
    case $opt in
        "Установить Docker")
            echo "Установка Docker началась"
sudo apt-get install curl gnupg apt-transport-https ca-certificates \
lsb-release -y && curl -fsSL https://download.docker.com/linux/ubuntu/gpg \
| sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg && \
echo "deb [arch=$(dpkg --print-architecture) \
signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] \
https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" \
| sudo tee /etc/apt/sources.list.d/docker.list > /dev/null && \
sudo apt-get update && \
sudo apt-get install docker-ce docker-ce-cli containerd.io -y ;;
        "Обновить пакетный менеджер apt")
            echo "Обновление apt началось"
sudo apt update && sudo apt upgrade -y;;
        "Установить Masa")
            echo "Установка началась"
            ;;
        "Выход")
            break
            ;;
        *) echo "invalid option $REPLY";;
    esac
    options
done
